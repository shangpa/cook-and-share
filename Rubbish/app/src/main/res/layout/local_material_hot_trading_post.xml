<?xml version="1.0" encoding="utf-8"?>
<!-- 테마별 리스트 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <!-- 카테고리 리스트를 위한 GridLayout -->
    <GridLayout
        android:id="@+id/categoryGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="150dp">

        <!-- 쌀 -->
        <LinearLayout
            android:id="@+id/rice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- 쌀 이미지 -->
                <ImageView
                    android:id="@+id/riceImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_local_material_hot_trading_post_rice" />

                <!-- 묵은쌀 나눔합니다! (이미지의 오른쪽 위쪽에 배치) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="묵은쌀 나눔합니다!"
                    android:textSize="13sp"
                    android:textColor="#2B2B2B"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@id/riceImage"
                    android:layout_alignTop="@id/riceImage" /> <!-- ImageView와 위쪽 정렬 -->
                    <!-- android:layout_toEndOf="@id/imageView" = ImageView 오른쪽에 배치 -->

                <!-- 구월동 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구월동"
                    android:textSize="11sp"
                    android:textColor="#8A8A8A"
                    android:layout_marginTop="26dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@id/riceImage"
                    android:layout_alignTop="@id/riceImage" />

                <!-- | -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textSize="11sp"
                    android:textColor="#8A8A8A"
                    android:layout_marginTop="26dp"
                    android:layout_marginStart="52dp"
                    android:layout_toEndOf="@id/riceImage"
                    android:layout_alignTop="@id/riceImage" />

                <!-- 3분전 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3분전"
                    android:textSize="11sp"
                    android:textColor="#8A8A8A"
                    android:layout_marginTop="26dp"
                    android:layout_marginStart="63dp"
                    android:layout_toEndOf="@id/riceImage"
                    android:layout_alignTop="@id/riceImage" />

                <!-- 나눔 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나눔"
                    android:textSize="13sp"
                    android:textColor="#35A825"
                    android:layout_marginBottom="7dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@id/riceImage"
                    android:layout_alignBottom="@id/riceImage" />
            </RelativeLayout>
        </LinearLayout>

        <!-- 배추 -->
        <LinearLayout
            android:id="@+id/napaCabbage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- 배추 이미지 -->
                <ImageView
                    android:id="@+id/napaCabbageImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/image_local_material_hot_trading_post_napa_cabbage" />

                <!-- 김장하고 남은 배추 팝니다..! (이미지의 오른쪽 위쪽에 배치) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="김장하고 남은 배추 팝니다..!"
                    android:textSize="13sp"
                    android:textColor="#2B2B2B"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@id/napaCabbageImage"
                    android:layout_alignTop="@id/napaCabbageImage" /> <!-- ImageView와 위쪽 정렬 -->
                <!-- android:layout_toEndOf="@id/imageView" = ImageView 오른쪽에 배치 -->

                <!-- 간석동 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="간석동"
                    android:textSize="11sp"
                    android:textColor="#8A8A8A"
                    android:layout_marginTop="26dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@id/napaCabbageImage"
                    android:layout_alignTop="@id/napaCabbageImage" />

                <!-- | -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textSize="11sp"
                    android:textColor="#8A8A8A"
                    android:layout_marginTop="26dp"
                    android:layout_marginStart="52dp"
                    android:layout_toEndOf="@id/napaCabbageImage"
                    android:layout_alignTop="@id/napaCabbageImage" />

                <!-- 1시간 전 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1시간 전"
                    android:textSize="11sp"
                    android:textColor="#8A8A8A"
                    android:layout_marginTop="26dp"
                    android:layout_marginStart="63dp"
                    android:layout_toEndOf="@id/napaCabbageImage"
                    android:layout_alignTop="@id/napaCabbageImage" />

                <!-- 500원 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500원"
                    android:textSize="13sp"
                    android:textColor="#35A825"
                    android:layout_marginBottom="7dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@id/napaCabbageImage"
                    android:layout_alignBottom="@id/napaCabbageImage" />
            </RelativeLayout>
        </LinearLayout>

        <!-- 귤 -->
        <LinearLayout
            android:id="@+id/orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- 귤 이미지 -->
                <ImageView
                    android:id="@+id/orangeImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/image_local_material_hot_trading_post_orange" />

                <!-- 귤이 많아서 귤 팝니다~ (이미지의 오른쪽 위쪽에 배치) -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="귤이 많아서 귤 팝니다~"
                    android:textSize="13sp"
                    android:textColor="#2B2B2B"
                    android:layout_marginTop="3dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@id/orangeImage"
                    android:layout_alignTop="@id/orangeImage" /> <!-- ImageView와 위쪽 정렬 -->
                <!-- android:layout_toEndOf="@id/imageView" = ImageView 오른쪽에 배치 -->

                <!-- 부개동 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="부개동"
                    android:textSize="11sp"
                    android:textColor="#8A8A8A"
                    android:layout_marginTop="26dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@id/orangeImage"
                    android:layout_alignTop="@id/orangeImage" />

                <!-- | -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="|"
                    android:textSize="11sp"
                    android:textColor="#8A8A8A"
                    android:layout_marginTop="26dp"
                    android:layout_marginStart="52dp"
                    android:layout_toEndOf="@id/orangeImage"
                    android:layout_alignTop="@id/orangeImage" />

                <!-- 24분 전 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24분 전"
                    android:textSize="11sp"
                    android:textColor="#8A8A8A"
                    android:layout_marginTop="26dp"
                    android:layout_marginStart="63dp"
                    android:layout_toEndOf="@id/orangeImage"
                    android:layout_alignTop="@id/orangeImage" />

                <!-- 1,000원 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1,000원"
                    android:textSize="13sp"
                    android:textColor="#35A825"
                    android:layout_marginBottom="7dp"
                    android:layout_marginStart="14dp"
                    android:layout_toEndOf="@id/orangeImage"
                    android:layout_alignBottom="@id/orangeImage" />
            </RelativeLayout>
        </LinearLayout>

    </GridLayout>
</LinearLayout>