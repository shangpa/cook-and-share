<?xml version="1.0" encoding="utf-8"?>
<!-- 테마별 리스트 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <!-- 카테고리 리스트를 위한 GridLayout -->
    <GridLayout
        android:id="@+id/categoryGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="150dp">

        <!-- 전체 -->
        <LinearLayout
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="15dp"
            android:gravity="start">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_popular_post_list_one" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연말 크리스마스를 위\n해 이런 요리 어떠신..."
                android:textSize="12sp"
                android:textColor="#2B2B2B"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="만렙요리사아"
                android:textSize="12sp"
                android:textColor="#2B2B2B"
                android:layout_marginTop="11dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2,435"
                android:textSize="12sp"
                android:textColor="#2B2B2B"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <!-- 한식 -->
        <LinearLayout
            android:id="@+id/koreanFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="15dp"
            android:gravity="start">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_popular_post_list_two" /> <!-- SVG 아이콘 파일 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매실청 만드는 방법은\n사실 간단해요! 이렇..."
                android:textSize="12sp"
                android:textColor="#2B2B2B"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휘파람"
                android:textSize="12sp"
                android:textColor="#2B2B2B"
                android:layout_marginTop="11dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,748"
                android:textSize="12sp"
                android:textColor="#2B2B2B"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <!-- 양식 -->
        <LinearLayout
            android:id="@+id/westernFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="20dp"
            android:gravity="start">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_popular_post_list_three" /> <!-- SVG 아이콘 파일 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다람쥐를 위해 도토리\n줍기는 하지맙시다"
                android:textSize="12sp"
                android:textColor="#2B2B2B"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다람쥐사랑단"
                android:textSize="12sp"
                android:textColor="#2B2B2B"
                android:layout_marginTop="11dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,239"
                android:textSize="12sp"
                android:textColor="#2B2B2B"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

        <!-- 일식 -->
        <LinearLayout
            android:id="@+id/categoryItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="20dp"
            android:gravity="start">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_popular_post_list_four" /> <!-- SVG 아이콘 파일 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="톳나물무침 만들때 이\n거말고?"
                android:textSize="12sp"
                android:textColor="#2B2B2B"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="백과사전임"
                android:textSize="12sp"
                android:textColor="#2B2B2B"
                android:layout_marginTop="11dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,014"
                android:textSize="12sp"
                android:textColor="#2B2B2B"
                android:layout_marginTop="5dp"/>
        </LinearLayout>



    </GridLayout>
</LinearLayout>