<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- 상단 바 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="13dp">

        <!-- 내 위치 + 화살표 아이콘 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:background="#FFFFFF">

            <!-- 내 위치 텍스트 -->
            <TextView
                android:id="@+id/myLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 위치"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- 화살표 아이콘 -->
            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down"
                android:contentDescription="위치 아이콘"
                android:layout_marginStart="0dp" />
        </LinearLayout>

        <!-- 검색 아이콘 -->
        <ImageView
            android:id="@+id/searchIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:contentDescription="검색 아이콘"
            android:layout_marginStart="230dp" />

        <!-- 사람 아이콘 -->
        <ImageView
            android:id="@+id/profileIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_profile"
            android:contentDescription="사람 아이콘"
            android:layout_marginLeft="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:gravity="center_vertical"
        android:layout_marginRight="8dp"> <!-- 나란히 배치하기 위해 간격 추가 -->

        <!-- 첫 번째 거리순 컨테이너 (재료) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_rectangle_background"
            android:padding="4dp"
            android:gravity="center_vertical"
            android:strokeColor="#D2D5D6"
            android:layout_marginRight="11dp"
            android:layout_marginLeft="8dp">

            <!-- 재료 텍스트 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="재료"
                android:textSize="11sp"
                android:textColor="#8A8F9C"
                android:layout_marginEnd="4dp" />

            <!-- 화살표 아이콘 -->
            <ImageView
                android:id="@+id/arrowDownIcon1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_arrow_down"
                android:contentDescription="재료 아이콘"
                app:tint="#8A8F9C" />
        </LinearLayout>

        <!-- 두 번째 거리순 컨테이너 (거리) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/rounded_rectangle_background"
            android:padding="4dp"
            android:gravity="center_vertical"
            android:strokeColor="#D2D5D6"
            android:layout_marginRight="200dp">

