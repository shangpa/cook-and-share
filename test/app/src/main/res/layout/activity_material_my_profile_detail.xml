<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/materailDetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 사진 -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/imagePager"
                    android:layout_width="match_parent"
                    android:layout_height="386dp"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:overScrollMode="never"/>

                <!-- 겹쳐지는 요소들 -->
                <ImageView
                    android:id="@+id/imageBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_material_image_back"
                    android:contentDescription="뒤로가기"
                    android:layout_gravity="top|start" />

                <ImageView
                    android:id="@+id/imageSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_image_search"
                    android:contentDescription="검색"
                    android:layout_gravity="top|end" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:orientation="horizontal"
                    android:layout_margin="16dp">

                    <TextView
                        android:id="@+id/imageCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="2dp"/>

                    <TextView
                        android:id="@+id/imageCountTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/1"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

            </FrameLayout>

            <!-- 설명 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">

                <!-- 제목 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/itemTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="다이소 채소 다지기 팝니다"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="170dp"/>

                    <ImageView
                        android:id="@+id/itemMore"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_more"
                        android:contentDescription="더보기 아이콘" />
                </LinearLayout>

                <!-- 지도 및 거리 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/mapIcon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="지도 아이콘"
                        android:src="@drawable/ic_location" />

                    <TextView
                        android:id="@+id/distanceOnly"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="거리가 들어와야함"
                    android:textColor="#8A8A8A"
                    android:textSize="12sp" />

                    <!-- 구분선 -->
                    <TextView
                        android:id="@+id/barDivider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="  |  "
                        android:textColor="#8A8A8A"
                        android:textSize="12sp" />

                    <!-- 날짜 -->
                    <TextView
                        android:id="@+id/dateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="01.16"
                        android:textColor="#8A8A8A"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- 구분선 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="#E0E0E0" />

                <!-- 카테고리, 수량, 구매날짜 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/category1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="카테고리"
                            android:textColor="#8A8A8A"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/quantity1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="조리기구"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/category2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="수량"
                            android:textColor="#8A8A8A"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/quantity2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="1개"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/itemSub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="사놓고 사용 안 한 다이소 채소 다지기입니다.\n미개봉인 점 참고해주세요.\n필요하신 분 채팅주세요."
                    android:textSize="14sp"/>

                <!-- 거래희망장소, 지도 및 상세보기 그룹 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/transactionPlace1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="거래희망장소"
                        android:textSize="11sp"
                        android:textColor="#8A8A8A"/>

                    <TextView
                        android:id="@+id/transactionPlace2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="성리초등학교 앞"
                        android:textSize="11sp"
                        android:layout_marginLeft="200dp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_m"
                    android:layout_width="370dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_material_map"
                    android:layout_marginBottom="10dp"/>

                <!-- 채팅, 조회 그룹 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="8dp">

                    <TextView
                        android:id="@+id/chatCount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="채팅"
                        android:textColor="#8A8A8A"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/chatCount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2   "
                        android:textColor="#8A8A8A"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/viewCount1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|   조회"
                        android:textColor="#8A8A8A"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/viewCount2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textColor="#8A8A8A"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- 사용자 정보 및 상품 판매 정보 -->
                <LinearLayout
                    android:id="@+id/otherProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="10dp"
                    android:paddingBottom="8dp">

                    <ImageView
                        android:id="@+id/userIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="사용자 아이콘"
                        android:src="@drawable/ic_user" />

                    <LinearLayout
                        android:layout_width="380dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="소금시러설탕시러"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="380dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/starIcon"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:contentDescription="별 아이콘"
                                android:src="@drawable/ic_star"
                                android:layout_marginEnd="5dp"/>

                            <TextView
                                android:id="@+id/reviewCount1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:text="5.0  |"
                                android:textColor="#8A8A8A"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/reviewCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:text="후기 3  |"
                                android:textColor="#8A8A8A"
                                android:textSize="11sp" />

                            <TextView
                                android:id="@+id/transactionHistory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="거래내역 3"
                                android:textColor="#8A8A8A"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/detailViewIcon"
                        android:layout_width="30dp"
                        android:layout_height="36dp"
                        android:contentDescription="자세히보기 아이콘"
                        android:src="@drawable/ic_expand_right_light" />

                </LinearLayout>

                <!-- 구분선 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="8dp"
                    android:background="#E0E0E0" />

                <LinearLayout
                    android:layout_width="380dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginBottom="30dp">

                    <TextView
                        android:id="@+id/otherItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="소금시러설탕시러님이 판매하시는 다른 상품"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"/>

                    <LinearLayout
                        android:layout_width="370dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img1"
                                android:layout_width="115dp"
                                android:layout_height="100dp"
                                android:src="@drawable/image_bowl" />

                            <TextView
                                android:id="@+id/otherItemText1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="그릇 팔아요"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/otherItemPrice1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="800P"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginTop="3dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img2"
                                android:layout_width="115dp"
                                android:layout_height="100dp"
                                android:src="@drawable/image_cup" />

                            <TextView
                                android:id="@+id/otherItemText2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="귀여운 컵 팔아요"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/otherItemPrice2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="200P"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginTop="3dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="115dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img3"
                                android:layout_width="115dp"
                                android:layout_height="100dp"
                                android:src="@drawable/image_stanley_cup" />

                            <TextView
                                android:id="@+id/otherItemText3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="스탠리 라일락색 887\n팔아요"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:id="@+id/otherItemPrice3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="990P"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="130dp"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- 하단 고정 바 -->
    <ImageView
        android:id="@+id/tapFixBarThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bar_tap_bg"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/heartIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:contentDescription="하트 아이콘"
        android:src="@drawable/ic_heart"
        app:layout_constraintTop_toTopOf="@id/tapFixBarThree"
        app:layout_constraintBottom_toBottomOf="@id/tapFixBarThree"
        app:layout_constraintStart_toStartOf="@id/tapFixBarThree"/>

    <TextView
        android:id="@+id/bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#D9D9D9"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/tapFixBarThree"
        app:layout_constraintBottom_toBottomOf="@id/tapFixBarThree"
        app:layout_constraintStart_toEndOf="@id/heartIcon"/>

    <TextView
        android:id="@+id/itemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500 P"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@id/tapFixBarThree"
        app:layout_constraintBottom_toBottomOf="@id/tapFixBarThree"
        app:layout_constraintStart_toEndOf="@id/bar"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pullingUpButton"
        android:layout_width="145dp"
        android:layout_height="45dp"
        android:text="끌어올리기"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:background="@drawable/rounded_button"
        android:layout_marginEnd="20dp"
        android:stateListAnimator="@null"
        app:layout_constraintTop_toTopOf="@id/tapFixBarThree"
        app:layout_constraintBottom_toBottomOf="@id/tapFixBarThree"
        app:layout_constraintEnd_toEndOf="@id/tapFixBarThree"/>

    <!-- 끌어올리기 확인 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pullingUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

        <!-- 회색 배경 View -->
        <View
            android:id="@+id/dimView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"/>

        <!-- 끌어올리기 상자 -->
        <View
            android:id="@+id/pullingUpBox"
            android:layout_width="280dp"
            android:layout_height="217dp"
            android:layout_marginTop="300dp"
            android:background="@drawable/ic_activity_recipe_content_check_rect"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 설명1 -->
        <TextView
            android:id="@+id/pullingUpExplain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="31dp"
            android:text="내 상품을 최상단으로 \n끌어올리고 더 빨리 팔아보세요"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/pullingUpBox"
            app:layout_constraintTop_toTopOf="@id/pullingUpBox"/>

        <!-- 500p -->
        <TextView
            android:id="@+id/point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginStart="31dp"
            android:text="500p"
            android:textColor="#35A825"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/pullingUpBox"
            app:layout_constraintTop_toBottomOf="@id/pullingUpExplain"/>

        <!-- 설명2 -->
        <TextView
            android:id="@+id/pullingUpExplainTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginStart="1dp"
            android:text="를 사용하여"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/point"
            app:layout_constraintTop_toBottomOf="@id/pullingUpExplain"/>

        <!-- 설명2 -->
        <TextView
            android:id="@+id/pullingUpExplainTwoAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="거래글을 끌어올리시겠습니까?"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/point"
            app:layout_constraintTop_toTopOf="@id/point"/>

        <!-- 취소 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel"
            android:layout_width="115dp"
            android:layout_height="33dp"
            android:text="취소"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="11sp"
            android:textColor="#000000"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_recipe_main_rect_no"
            android:stateListAnimator="@null"
            app:layout_constraintBottom_toBottomOf="@id/pullingUpBox"
            app:layout_constraintStart_toStartOf="@id/pullingUpBox" />

        <!-- 확인 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/check"
            android:layout_width="115dp"
            android:layout_height="33dp"
            android:text="확인"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="11sp"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_recipe_main_rect_yes"
            android:stateListAnimator="@null"
            app:layout_constraintBottom_toBottomOf="@id/pullingUpBox"
            app:layout_constraintEnd_toEndOf="@id/pullingUpBox" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
