<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/linearLayoutTmap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></LinearLayout>

        <!-- 타이머 없이 레시피 보기 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/recipeSee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <!-- 뒤로가기, 하트, 좋아요, 공유 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/recipeTap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <!-- 뒤로가기 -->
                <ImageButton
                    android:id="@+id/backArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_lelft_arrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 하트 버튼 -->
                <ImageButton
                    android:id="@+id/heartButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_recipe_heart"
                    app:layout_constraintBottom_toBottomOf="@id/backArrow"
                    app:layout_constraintEnd_toStartOf="@id/goodButton"
                    app:layout_constraintTop_toTopOf="@id/backArrow" />

                <!-- 좋아요 버튼 -->
                <ImageButton
                    android:id="@+id/goodButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_good"
                    app:layout_constraintEnd_toEndOf="@id/heartButton"
                    app:layout_constraintStart_toStartOf="@id/shareButton"
                    app:layout_constraintTop_toTopOf="@id/heartButton" />

                <!-- 공유 버튼 -->
                <ImageButton
                    android:id="@+id/shareButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="1dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_share"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/heartButton" />

                </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/activityMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:fillViewport="true"
            app:layout_constraintTop_toBottomOf="@id/recipeTap">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 이미지 -->
            <ImageView
                android:id="@+id/image"
                android:layout_width="412dp"
                android:layout_height="295dp"
                android:src="@drawable/image_video_see"
                android:layout_marginTop="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- 영상 플레이어 -->
            <androidx.media3.ui.PlayerView
                android:id="@+id/videoPlayerView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:visibility="gone"
                app:use_controller="true"
                app:resize_mode="fit"
                app:layout_constraintTop_toTopOf="@id/image"
                app:layout_constraintBottom_toBottomOf="@id/image"
                app:layout_constraintStart_toStartOf="@id/image"
                app:layout_constraintEnd_toEndOf="@id/image"/>
            <ImageButton
                android:id="@+id/fullScreenButton"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="12dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_full_screen"
                android:contentDescription="전체화면"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="@id/videoPlayerView"
                app:layout_constraintEnd_toEndOf="@id/videoPlayerView" />

            <!-- 재생 버튼 -->
            <ImageButton
                android:id="@+id/btnVideo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_video_play_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/image"
                app:layout_constraintBottom_toBottomOf="@id/image"/>

            <!-- 채식 -->
            <TextView
                android:id="@+id/vegetarianDiet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="23dp"
                android:text="채식"
                android:textSize="13sp"
                android:textColor="#2B2B2B"
                app:layout_constraintTop_toBottomOf="@id/image"
                app:layout_constraintStart_toStartOf="@id/image" />

            <!-- 그릴드 벨 페퍼 샌드위치 -->
            <TextView
                android:id="@+id/vegetarianDietName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginStart="0dp"
                android:text="그릴드 벨 페퍼 샌드위치"
                android:textSize="20sp"
                android:textColor="#2B2B2B"
                app:layout_constraintTop_toBottomOf="@id/vegetarianDiet"
                app:layout_constraintStart_toStartOf="@id/vegetarianDiet" />

            <!-- 소금쇼 -->
            <TextView
                android:id="@+id/saltShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소금쇼"
                android:textSize="13sp"
                android:textColor="#2B2B2B"
                android:layout_marginTop="9dp"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@id/image"
                app:layout_constraintTop_toBottomOf="@id/vegetarianDietName"
                app:layout_constraintStart_toStartOf="@id/vegetarianDietName" />

            <!-- | -->
            <TextView
                android:id="@+id/middle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textSize="11sp"
                android:textColor="#8A8A8A"
                android:layout_marginTop="9dp"
                android:layout_marginStart="38dp"
                android:layout_toEndOf="@id/image"
                app:layout_constraintTop_toBottomOf="@id/vegetarianDietName"
                app:layout_constraintStart_toStartOf="@id/vegetarianDietName" />

            <!-- 01.17 -->
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01.17"
                android:textSize="13sp"
                android:textColor="#2B2B2B"
                android:layout_marginTop="9dp"
                android:layout_marginStart="49dp"
                android:layout_toEndOf="@id/image"
                app:layout_constraintTop_toBottomOf="@id/vegetarianDietName"
                app:layout_constraintStart_toStartOf="@id/vegetarianDietName" />

            <!-- 난이도 -->
            <TextView
                android:id="@+id/levelOfDifficulty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="난이도"
                android:textSize="13sp"
                android:textColor="#2B2B2B"
                android:layout_marginTop="26dp"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@id/image"
                app:layout_constraintTop_toBottomOf="@id/saltShow"
                app:layout_constraintStart_toStartOf="@id/saltShow" />

            <!-- 초급 -->
            <TextView
                android:id="@+id/elementaryLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="초급"
                android:textSize="13sp"
                android:textColor="#35A825"
                android:layout_marginTop="26dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/image"
                app:layout_constraintTop_toBottomOf="@id/saltShow"
                app:layout_constraintStart_toEndOf="@id/levelOfDifficulty" />

            <!-- 시간 -->
            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="시간"
                android:textSize="13sp"
                android:textColor="#2B2B2B"
                android:layout_marginTop="26dp"
                android:layout_marginStart="28dp"
                android:layout_toEndOf="@id/image"
                app:layout_constraintTop_toBottomOf="@id/saltShow"
                app:layout_constraintStart_toEndOf="@id/elementaryLevel" />

            <!-- 30분 -->
            <TextView
                android:id="@+id/halfHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="26dp"
                android:layout_toEndOf="@id/image"
                android:text="30분"
                android:textColor="#35A825"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/time"
                app:layout_constraintTop_toBottomOf="@id/saltShow" />

            <!-- 태그  -->
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/tagContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/levelOfDifficulty"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:flexWrap="wrap"
                app:justifyContent="flex_start"
                app:alignItems="flex_start"
                android:orientation="horizontal" />

            <!-- 태그 아래 바 -->
            <View
                android:id="@+id/divideRectangleBarOne"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bar_rectangle"
                app:layout_constraintTop_toBottomOf="@id/tagContainer" />

            <!-- 재료 -->
            <TextView
                android:id="@+id/material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="17dp"
                android:layout_toStartOf="@id/image"
                android:text="재료"
                android:textColor="#000000"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="@id/divideRectangleBarOne"
                app:layout_constraintTop_toBottomOf="@id/divideRectangleBarOne" />

            <!-- 재료 아래 바 -->
            <View
                android:id="@+id/divideRectangleBarTewleve"
                android:layout_width="117dp"
                android:layout_height="3dp"
                android:layout_marginTop="17dp"
                android:layout_marginStart="22dp"
                android:background="@drawable/bar_recipe"
                app:layout_constraintTop_toBottomOf="@id/material"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- 조리 순서 -->
            <TextView
                android:id="@+id/cookOrder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="0dp"
                android:layout_toStartOf="@id/image"
                android:text="조리 순서"
                android:textColor="#A1A9AD"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/material"
                app:layout_constraintTop_toTopOf="@id/material" />

            <!-- 리뷰 -->
            <TextView
                android:id="@+id/review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="80dp"
                android:layout_marginTop="0dp"
                android:layout_toStartOf="@id/image"
                android:text="리뷰"
                android:textColor="#A1A9AD"
                android:textSize="13sp"
                app:layout_constraintStart_toEndOf="@id/cookOrder"
                app:layout_constraintTop_toTopOf="@id/material" />

            <!-- 선택 아래 바 -->
            <View
                android:id="@+id/divideRectangleBarTwo"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/bar_rectangle"
                app:layout_constraintTop_toBottomOf="@id/review" />

            <!-- 재료 탭 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/materialTap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                app:layout_constraintTop_toBottomOf="@id/divideRectangleBarTwo">
                <LinearLayout
                    android:id="@+id/ingredientContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 조리순서 탭 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cookOrderTap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                app:layout_constraintTop_toBottomOf="@id/divideRectangleBarTwo"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/stepContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="32dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 리뷰 탭 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/reviewTap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/divideRectangleBarTwo"
                android:visibility="gone">

                <!-- 전체 리뷰 -->
                <TextView
                    android:id="@+id/totalReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="전체 리뷰"
                    android:textColor="#2B2B2B"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 최신순 -->
                <TextView
                    android:id="@+id/latest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7dp"
                    android:text="최신순"
                    android:textColor="#2B2B2B"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toStartOf="@id/downArrow"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 전체 리뷰 아래 바 -->
                <View
                    android:id="@+id/divideRectangleBarFortyEight"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/bar_rectangle"
                    app:layout_constraintTop_toBottomOf="@id/totalReview" />

                <!-- 드롭다운 -->
                <ImageButton
                    android:id="@+id/downArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="20dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_arrow_down"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/totalReview"/>

                <!-- 자취하는 꼬맹이 -->
                <TextView
                    android:id="@+id/userNameOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="37dp"
                    android:text="자취하는 꼬맹이"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/divideRectangleBarFortyEight" />

                <!-- | -->
                <TextView
                    android:id="@+id/middleTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="0dp"
                    android:text="|"
                    android:textColor="#D2D5D6"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/userNameOne"
                    app:layout_constraintTop_toTopOf="@id/userNameOne" />

                <!-- 이미지 -->
                <ImageView
                    android:id="@+id/starSix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_review_list_star"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="11dp"
                    app:layout_constraintStart_toEndOf="@id/middleTwo"
                    app:layout_constraintTop_toTopOf="@id/middleTwo"/>

                <!-- 5.0 -->
                <TextView
                    android:id="@+id/rievewScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="0dp"
                    android:text="5.0"
                    android:textColor="#D2D5D6"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/starSix"
                    app:layout_constraintTop_toTopOf="@id/userNameOne" />

                <!-- 2024.12.25 -->
                <TextView
                    android:id="@+id/dateTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="0dp"
                    android:text="2024.12.25"
                    android:textColor="#D2D5D6"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/userNameOne" />

                <!-- 이미지 -->
                <ImageView
                    android:id="@+id/food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_review_list_food"
                    android:layout_marginTop="13dp"
                    android:layout_marginStart="0dp"
                    app:layout_constraintStart_toStartOf="@id/userNameOne"
                    app:layout_constraintTop_toBottomOf="@id/userNameOne"/>

                <!-- 내용 -->
                <TextView
                    android:id="@+id/contentTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginTop="0dp"
                    android:text="재료도 간단하고 맛있어요! 크리스마스 파티 때\n먹으려고 했는데 다들 맛있게 먹어서 좋네요ㅎ\nㅎㅎ"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/food"
                    app:layout_constraintTop_toTopOf="@id/food" />

                <!-- 리뷰1 아래 구분바 -->
                <View
                    android:id="@+id/divideRectangleBarFortyNine"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@drawable/bar_rectangle"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/food"/>

                <!-- 요리사로데뷔 -->
                <TextView
                    android:id="@+id/userNameTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="18dp"
                    android:text="요리사로데뷔"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divideRectangleBarFortyNine" />

                <!-- | -->
                <TextView
                    android:id="@+id/middleThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="11dp"
                    android:layout_marginTop="0dp"
                    android:text="|"
                    android:textColor="#D2D5D6"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/userNameTwo"
                    app:layout_constraintTop_toTopOf="@id/userNameTwo" />

                <!-- 이미지 -->
                <ImageView
                    android:id="@+id/starSeven"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_review_list_star"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="11dp"
                    app:layout_constraintStart_toEndOf="@id/middleThree"
                    app:layout_constraintTop_toTopOf="@id/middleThree"/>

                <!-- 3.0 -->
                <TextView
                    android:id="@+id/rievewScoreTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="0dp"
                    android:text="3.0"
                    android:textColor="#D2D5D6"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/starSeven"
                    app:layout_constraintTop_toTopOf="@id/userNameTwo" />

                <!-- 2024.12.24 -->
                <TextView
                    android:id="@+id/dateThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="0dp"
                    android:text="2024.12.24"
                    android:textColor="#D2D5D6"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/userNameTwo" />

                <!-- 내용2 -->
                <TextView
                    android:id="@+id/contentThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="16dp"
                    android:text="아... 너무 짜요...;;;;"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="@id/userNameTwo"
                    app:layout_constraintTop_toBottomOf="@id/userNameTwo" />

                <!-- 댓글1 아래 구분바 -->
                <View
                    android:id="@+id/divideRectangleBarFifty"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@drawable/bar_rectangle"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/contentThree"/>

                <!-- 먀냥냥 -->
                <TextView
                    android:id="@+id/userNameThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="18dp"
