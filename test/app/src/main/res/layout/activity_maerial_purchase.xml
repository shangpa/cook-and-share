<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <!-- 상단 바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/myPurchaseBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"
                android:contentDescription="뒤로가기 아이콘"
                android:layout_marginRight="90dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/fridgeMainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나의 동네재료 구매내역"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0" />

        <!-- 프로필 아이템 1 -->
        <LinearLayout
            android:id="@+id/profileItem3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:layout_marginTop="18dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_material"
                    android:contentDescription="아이템 사진"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/itemTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="묵은쌀 나눔합니다"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/itemMore"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_more"
                            android:contentDescription="더보기 아이콘" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:id="@+id/distanceIcon"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_location"
                            android:contentDescription="거리 아이콘"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/distanceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500m | 1.06km"
                            android:textSize="12sp"
                            android:textColor="#8A8A8A"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/purchaseDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="구입 날짜 : 2025.12.12"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#8A8A8A"/>

                    <TextView
                        android:id="@+id/itemPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2,000원"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#35A825" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_rectangle_background">

                <ImageView
                    android:id="@+id/arrowIcon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="아이콘"
                    app:tint="#8A8F9C"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="140dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="후기 작성하기"
                    android:textSize="13sp"
                    android:textColor="#8A8F9C"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"/>
        </LinearLayout>

        <!-- 프로필 아이템 1 -->
        <LinearLayout
            android:id="@+id/profileItem4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="8dp"
                android:layout_marginTop="18dp">

                <ImageView
                    android:id="@+id/image4"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:src="@drawable/img_material"
                    android:contentDescription="아이템 사진"
                    android:layout_marginEnd="8dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/itemTitle4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="묵은쌀 나눔합니다"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_weight="1"/>

                        <ImageView
                            android:id="@+id/itemMore4"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_more"
                            android:contentDescription="더보기 아이콘" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:id="@+id/distanceIcon4"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_location"
                            android:contentDescription="거리 아이콘"
                            android:layout_marginEnd="4dp" />

                        <TextView
                            android:id="@+id/distanceText4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="500m | 1.06km"
                            android:textSize="12sp"
                            android:textColor="#8A8A8A"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/purchaseDate4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="구입 날짜 : 2025.12.12"
                        android:textSize="11sp"
                        android:layout_marginTop="4dp"
                        android:textColor="#8A8A8A"/>

                    <TextView
                        android:id="@+id/itemPrice4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2,000원"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#35A825" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_rectangle_background">

                <ImageView
                    android:id="@+id/arrowIcon4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="아이콘"
                    app:tint="#8A8F9C"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="140dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="후기 작성하기"
                    android:textSize="13sp"
                    android:textColor="#8A8F9C"
                    android:gravity="center_vertical" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="25dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
