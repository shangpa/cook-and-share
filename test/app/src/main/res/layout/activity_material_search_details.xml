<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <!-- 상단 바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/searchBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_back"
                android:contentDescription="뒤로가기 아이콘"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"/>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_background"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp"
                android:backgroundTint="#F1F3F6">

                <!-- 검색창 -->
                <EditText
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="필요한 용품을 검색해보세요"
                    android:background="@null"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_marginStart="5dp"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/search"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_search"
                android:contentDescription="검색 아이콘"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_rectangle_background"
                android:padding="4dp"
                android:gravity="center"
                android:strokeColor="#D2D5D6"
                android:layout_marginRight="11dp"
                android:layout_marginLeft="20dp">

                <!-- 재료 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="재료"
                    android:textSize="11sp"
                    android:textColor="#8A8F9C"
                    android:layout_marginEnd="4dp" />

                <!-- 화살표 아이콘 -->
                <ImageView
                    android:id="@+id/arrowDownIcon1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_arrow_down"
                    android:contentDescription="재료 아이콘"
                    app:tint="#8A8F9C" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_rectangle_background"
                android:padding="4dp"
                android:gravity="center"
                android:strokeColor="#D2D5D6"
                android:layout_marginRight="11dp">

                <!-- 거리 텍스트 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거리"
                    android:textSize="11sp"
                    android:textColor="#8A8F9C"
                    android:layout_marginEnd="4dp" />

                <!-- 화살표 아이콘 -->
                <ImageView
                    android:id="@+id/arrowDownIcon2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/ic_arrow_down"
                    android:contentDescription="재료 아이콘"
                    app:tint="#8A8F9C" />
            </LinearLayout>

            <ImageView
                android:id="@+id/filter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_filter"
                android:contentDescription="필터 아이콘"
                android:layout_marginLeft="200dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <!-- 구분선 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#F5F6F7"
            android:layout_marginBottom="15dp"/>

        <!-- 검색 결과 개수 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 총 -->
                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="총"
                    android:textColor="#2B2B2B"
                    android:textSize="13sp" />

                <!-- 150 -->
                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text=""
                    android:textColor="#35A825"
                    android:textSize="13sp" />

                <!-- 개 검색결과 -->
                <TextView
                    android:id="@+id/searchResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:text="개 레시피"
                    android:textColor="#2B2B2B"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginLeft="260dp">

                <!-- 거리순 텍스트 -->
                <TextView
                    android:id="@+id/w"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="거리순"
                    android:textSize="10sp"
                    android:textColor="#2B2B2B"/>

                <!-- 화살표 -->
                <ImageView
                    android:id="@+id/sortArrow"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_arrow_down"
                    android:contentDescription="거리순 화살표"
                    app:tint="#2B2B2B" />
            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tradePostRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/searchEmptyImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image_search_no_search"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/searchEmptyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="해당되는 결과가\n      없습니다"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>