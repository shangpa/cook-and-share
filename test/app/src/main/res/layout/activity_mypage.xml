<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp"
        android:fillViewport="true">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#000000">

                <!-- 상단 바 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp">

                    <!-- 마이페이지 텍스트 -->
                    <TextView
                        android:id="@+id/mypageTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="마이페이지"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginTop="4dp"/>

                    <!-- 검색 아이콘 -->
                    <ImageButton
                        android:id="@+id/seachIcon"
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:src="@drawable/ic_search_light"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_marginEnd="10dp" />

                    <!-- 종 아이콘 -->
                    <ImageButton
                        android:id="@+id/bellIcon"
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:src="@drawable/ic_bell_light"
                        android:background="?attr/selectableItemBackgroundBorderless" />
                </LinearLayout>


                <!-- 사용자 이름 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp" >

                    <!-- 사용자 이름 텍스트 -->
                    <TextView
                        android:id="@+id/mypageUserNameText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="로그인을 해주세요"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#ffffff"
                        android:layout_marginTop="2dp"/>

                    <!-- 프로필 이미지 및 내 채널로 바로가기 -->
                    <LinearLayout
                        android:id="@+id/profileArea"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:layout_marginEnd="30dp"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/profileImage"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:src="@drawable/ic_cicrle_profile"
                            android:scaleType="centerCrop"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp">

                            <TextView
                                android:id="@+id/nicknameText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="닉네임"
                                android:textColor="#FFFFFF"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/myChannelLink"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="내 채널로 바로가기 >"
                                android:textColor="#B9BEC1"
                                android:textSize="14sp"
                                android:layout_marginTop="8dp"/>
                        </LinearLayout>
                    </LinearLayout>


                    <!--                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="님"
                                            android:textSize="14sp"
                                            android:textStyle="bold"
                                            android:layout_marginStart="1dp"
                                            android:textColor="#ffffff"
                                            android:layout_marginTop="2dp"/>-->

                    <!-- 개인정보수정 아이콘 -->
                    <ImageButton
                        android:id="@+id/userEditIcon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_banner_right"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:layout_marginStart="3dp"
                        android:layout_marginTop="5dp"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보유 포인트"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginStart="30dp"
                    android:textColor="#ffffff"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:id="@+id/myPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="30dp"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="25dp"/>
            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#F5F6F7"
                android:layout_marginBottom="25dp"/>

            <!-- 관리 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관리"
                android:textSize="11sp"
                android:textColor="#A1A9AD"
                android:layout_marginStart="30dp" />

            <!-- 개인정보수정 -->
            <TextView
                android:id="@+id/editInformation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인정보수정"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginStart="30dp"
                android:layout_marginTop="17dp" />

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D9D9D9"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="15dp" />

            <!-- 레시피 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레시피"
                android:textSize="11sp"
                android:textColor="#A1A9AD"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"/>

            <!-- 찜한 레시피 -->
            <LinearLayout
                android:id="@+id/recipeLike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="17dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

                <!-- 레시피 아이콘 -->
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/ic_mypage_recipe"
                    android:contentDescription="레시피 아이콘" />

                <!-- 찜한 레시피 텍스트 -->
                <TextView
                    android:id="@+id/likeRecipeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="찜한 레시피"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

            <!-- 작성한 레시피 -->
            <LinearLayout
                android:id="@+id/recipeWrite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

                <!-- 레시피 아이콘 -->
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/ic_mypage_recipe"
                    android:contentDescription="레시피 아이콘" />

                <!-- 작성한 레시피 텍스트 -->
                <TextView
                    android:id="@+id/writeRecipeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작성한 레시피"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

        <!-- 임시저장한 레시피 -->
        <LinearLayout
            android:id="@+id/transientStorageRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <!-- 레시피 아이콘 -->
            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/ic_mypage_recipe"
                android:contentDescription="레시피 아이콘" />

            <!-- 임시저장한 레시피 텍스트 -->
            <TextView
                android:id="@+id/transientStorageRecipeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="임시저장한 레시피"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"/>

        </LinearLayout>

            <!-- 레시피 리뷰 내역 -->
            <LinearLayout
                android:id="@+id/recipeReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

                <!-- 레시피 아이콘 -->
                <ImageView
                    android:layout_width="19dp"
                    android:layout_height="19dp"
                    android:src="@drawable/ic_mypage_recipe"
                    android:contentDescription="레시피 아이콘" />

                <!-- 작성한 레시피 텍스트 -->
                <TextView
                    android:id="@+id/recipeReviewListText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="레시피 리뷰 내역"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D9D9D9"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="15dp" />

            <!-- 냉장고 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="냉장고"
                android:textSize="11sp"
                android:textColor="#A1A9AD"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"/>

            <!-- 냉장고 재료 관리 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

                <!-- 냉장고 아이콘 -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mypage_fridge"
                    android:contentDescription="냉장고 아이콘" />

                <!--  냉장고 재료 관리 텍스트 -->
                <TextView
                    android:id="@+id/IngredientListText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="냉장고 재료 관리"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D9D9D9"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="15dp" />

            <!-- 동네주방 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동네주방"
                android:textSize="11sp"
                android:textColor="#A1A9AD"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"/>

            <!-- 동네주방 내역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

                <!-- 동네주방 아이콘 -->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_mypage_material"
                    android:contentDescription="동네주방 아이콘" />

                <!--  동네주방 내역 텍스트 -->
                <TextView
                    android:id="@+id/MaterialListText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="동네주방 내역"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D9D9D9"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="15dp" />

            <!-- 커뮤니티 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="커뮤니티"
                android:textSize="11sp"
                android:textColor="#A1A9AD"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"/>



            <!-- 작성한 게시글 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp">

                <!-- 작성한 게시글 아이콘 -->
                <ImageView
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:src="@drawable/ic_mypage_community_write"
                    android:contentDescription="작성한 게시글 아이콘" />

                <!-- 작성한 레시피 텍스트 -->
                <TextView
                    android:id="@+id/writePostText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작성한 게시글"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="1dp"/>

            </LinearLayout>

            <!-- 구분선 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D9D9D9"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="15dp" />

            <!-- 로그인하러 가기 / 로그아웃 텍스트 -->
            <TextView
                android:id="@+id/logoutText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인하러 가기"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>
    </ScrollView>

    <!-- 탭바 전체 배경 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom">

        <!-- 탭바 배경 이미지 -->
        <ImageView
            android:id="@+id/mainTapBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bar_tap_bg"
            android:scaleType="fitXY" />

        <!-- 탭바 버튼 그룹 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="5">

            <!-- 동네주방 탭 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tapVillageKitchenIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_village_kitchen" />

                <TextView
                    android:id="@+id/tapVillageKitchenText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="동네주방"
                    android:textColor="#B9BEC1"
                    android:textSize="10sp"
                    android:layout_marginBottom="4dp" />
            </LinearLayout>

            <!-- 레시피 탭 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center|top">

                <ImageView
                    android:id="@+id/tapRecipeIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_recipe"
                    android:layout_marginTop="14dp"/>


                <TextView
                    android:id="@+id/tapRecipeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="레시피"
                    android:textColor="#B9BEC1"
                    android:textSize="10sp"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- 홈 탭 -->
            <LinearLayout
                android:id="@+id/tapHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tapHomeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home"
                    android:layout_marginBottom="15dp"/>
            </LinearLayout>

            <!-- 커뮤니티 탭 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tapCommunityIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_community" />

                <TextView
                    android:id="@+id/tapCommunityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="커뮤니티"
                    android:textColor="#B9BEC1"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- 냉장고 탭 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center|top">

                <ImageView
                    android:id="@+id/tapFridgeIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_refrigerator"
                    android:layout_marginTop="14dp"/>

                <TextView
                    android:id="@+id/tapFridgeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="냉장고"
                    android:textColor="#B9BEC1"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>