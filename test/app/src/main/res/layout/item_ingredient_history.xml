<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="15dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="@color/white">

    <!-- ✅ 사각형 바깥쪽에 위치한 날짜 -->
    <TextView
        android:id="@+id/historyDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025.05.21"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="10dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 카드 내부 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:strokeWidth="1.5dp"
            app:strokeColor="#D9D9D9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="20dp">

                <!-- 이미지 -->
                <ImageView
                    android:id="@+id/materialImage"
                    android:layout_width="48dp"
                    android:layout_height="80dp"
                    android:src="@drawable/image_tomato"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <!-- 이름 -->
                <TextView
                    android:id="@+id/material"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가지"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/materialImage"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="12dp"/>

                <!-- 카테고리 -->
                <TextView
                    android:id="@+id/greengrocery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="채소류"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/material"
                    app:layout_constraintTop_toBottomOf="@id/material" />

                <!-- 보관장소 -->
                <TextView
                    android:id="@+id/storagePlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="보관장소 : "
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/greengrocery"
                    app:layout_constraintTop_toBottomOf="@id/greengrocery" />

                <TextView
                    android:id="@+id/storageOutside"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="실외"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toEndOf="@id/storagePlace"
                    app:layout_constraintTop_toTopOf="@id/storagePlace" />

                <!-- 구매일자 -->
                <TextView
                    android:id="@+id/purchaseDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구매일자 : 2025.05.20"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@id/storagePlace"
                    app:layout_constraintTop_toBottomOf="@id/storagePlace"/>

                <TextView
                    android:id="@+id/amountSign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textColor="#409CFF"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintEnd_toStartOf="@id/number"
                    app:layout_constraintBaseline_toBaselineOf="@id/number"/>

                <!-- 수량 -->
                <TextView
                    android:id="@+id/number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16"
                    android:textColor="#409CFF"
                    android:textSize="17sp"
                    android:layout_marginEnd="2dp"
                    app:layout_constraintEnd_toStartOf="@id/unit"
                    app:layout_constraintBaseline_toBaselineOf="@id/unit" />

                <!-- 단위 -->
                <TextView
                    android:id="@+id/unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="개"
                    android:textColor="#409CFF"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

