<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- 레시피 -->
    <TextView
        android:id="@+id/recipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:text="레시피"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 검색 버튼 -->
    <ImageButton
        android:id="@+id/searchIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_search"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 레시피 아래 구분바 -->
    <View
        android:id="@+id/divideRectangleBarOne"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bar_rectangle"
        app:layout_constraintTop_toBottomOf="@id/recipe" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="72dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 레시피 이거 어때요? -->
            <TextView
                android:id="@+id/recipeQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:text="레시피 이거 어때요?"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- 첫번째 카테고리 버튼들 가로 스크롤로 감싸기 -->
            <HorizontalScrollView
                android:id="@+id/categoryScroll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none"
                android:layout_marginTop="17dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/recipeQuestion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/categoryButtonContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="20dp">

                    <!-- 야식 -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/lateNightMeal"
                        android:layout_width="55dp"
                        android:layout_height="27dp"
                        android:text="야식"
                        android:textSize="12sp"
                        android:textColor="#8A8F9C"
                        android:background="@drawable/btn_recipe_add"
                        android:stateListAnimator="@null"
                        android:layout_marginEnd="6dp" />

                    <!-- 비오는날 -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/rainsDay"
                        android:layout_width="76dp"
                        android:layout_height="27dp"
                        android:text="비오는날"
                        android:textSize="11sp"
                        android:textColor="#8A8F9C"
                        android:background="@drawable/btn_recipe_add"
                        android:stateListAnimator="@null"
                        android:layout_marginEnd="6dp" />

                    <!-- 시원한 -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cool"
                        android:layout_width="67dp"
                        android:layout_height="27dp"
                        android:text="시원한"
                        android:textSize="11sp"
                        android:textColor="#8A8F9C"
                        android:background="@drawable/btn_recipe_add"
                        android:stateListAnimator="@null"
                        android:layout_marginEnd="6dp" />

                    <!-- 이열치열 -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/heat"
                        android:layout_width="76dp"
                        android:layout_height="27dp"
                        android:text="이열치열"
                        android:textSize="11sp"
                        android:textColor="#8A8F9C"
                        android:background="@drawable/btn_recipe_add"
                        android:stateListAnimator="@null"
                        android:layout_marginEnd="6dp" />

                    <!-- 비건 -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/vegan"
                        android:layout_width="55dp"
                        android:layout_height="27dp"
                        android:text="비건"
                        android:textSize="11sp"
                        android:textColor="#8A8F9C"
                        android:background="@drawable/btn_recipe_add"
                        android:stateListAnimator="@null"
                        android:layout_marginEnd="6dp" />

                    <!-- 초간단 -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/superSimple"
                        android:layout_width="67dp"
                        android:layout_height="27dp"
                        android:text="초간단"
                        android:textSize="11sp"
                        android:textColor="#8A8F9C"
                        android:background="@drawable/btn_recipe_add"
                        android:stateListAnimator="@null"
                        android:layout_marginEnd="6dp" />

                </LinearLayout>
            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/suggestRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:paddingStart="20dp"
                android:paddingEnd="16dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintTop_toBottomOf="@id/categoryScroll"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_suggest_recipe" />

            <!-- 레시피 이거 어때요? 아래 구분선 -->
            <View
                android:id="@+id/divideOne"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D9D9D9"
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/suggestRecycler"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- 1분 레시피 -->
            <TextView
                android:id="@+id/oneMinuteRecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:text="1분 레시피"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/divideOne"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- 더보기 -->
            <TextView
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp"
                android:layout_marginEnd="20dp"
                android:text="더보기"
                android:textColor="#9B9B9B"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/divideOne"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- 1분 레시피 카테고리 -->
            <HorizontalScrollView
                android:id="@+id/categoryScrollThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/oneMinuteRecipe">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="16dp">

                    <!-- 비디오1 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/oneMinuterecipeCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <!-- 비디오 이미지 -->
                        <ImageView
                            android:id="@+id/video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/image_one_minute"
                            android:layout_marginTop="15dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <!-- 비디오 이름 -->
                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11dp"
                            android:layout_marginStart="0dp"
                            android:text="팬 하나로 끝내는 초간단 요리"
                            android:textColor="#2B2B2B"
                            android:textSize="12sp"
                            app:layout_constraintTop_toBottomOf="@id/video"
                            app:layout_constraintStart_toStartOf="@id/video"/>

                        <!-- 비디오 조회수 -->
                        <TextView
                            android:id="@+id/hits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="조회수"
                            android:textColor="#9B9B9B"
                            android:textSize="11sp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@id/title"
                            app:layout_constraintStart_toStartOf="@id/title"/>

                        <!-- 비디오 조회수 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7.4천회"
                            android:textColor="#9B9B9B"
                            android:textSize="11sp"
                            android:layout_marginStart="3dp"
                            app:layout_constraintTop_toTopOf="@id/hits"
                            app:layout_constraintStart_toEndOf="@id/hits"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- 비디오2 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/oneMinuterecipeCardTwo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="parent">

                        <!-- 비디오 이미지 -->
                        <ImageView
                            android:id="@+id/videoTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/image_one_minute_two"
                            android:layout_marginTop="15dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <!-- 비디오 이름 -->
                        <TextView
                            android:id="@+id/titleTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11dp"
                            android:layout_marginStart="0dp"
                            android:text="고구마줄기로 만드는 물김치 어\n떤가요?"
                            android:textColor="#2B2B2B"
                            android:textSize="12sp"
                            app:layout_constraintTop_toBottomOf="@id/videoTwo"
                            app:layout_constraintStart_toStartOf="@id/videoTwo"/>

                        <!-- 비디오 조회수 -->
                        <TextView
                            android:id="@+id/hitsTwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="조회수"
                            android:textColor="#9B9B9B"
                            android:textSize="11sp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@id/titleTwo"
                            app:layout_constraintStart_toStartOf="@id/titleTwo"/>

                        <!-- 비디오 조회수 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1천회"
                            android:textColor="#9B9B9B"
                            android:textSize="11sp"
                            android:layout_marginStart="3dp"
                            app:layout_constraintTop_toTopOf="@id/hitsTwo"
                            app:layout_constraintStart_toEndOf="@id/hitsTwo"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- 비디오3 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/oneMinuterecipeCardThree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="parent">

                        <!-- 비디오 이미지 -->
                        <ImageView
                            android:id="@+id/videoThree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/image_one_minute_three"
                            android:layout_marginTop="15dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <!-- 비디오 이름 -->
                        <TextView
                            android:id="@+id/titleThree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11dp"
                            android:layout_marginStart="0dp"
                            android:text="맛있는거 + 맛있는거 = 완전 맛\n있는거"
                            android:textColor="#2B2B2B"
                            android:textSize="12sp"
                            app:layout_constraintTop_toBottomOf="@id/videoThree"
                            app:layout_constraintStart_toStartOf="@id/videoThree"/>

                        <!-- 비디오 조회수 -->
                        <TextView
                            android:id="@+id/hitsThree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="조회수"
                            android:textColor="#9B9B9B"
                            android:textSize="11sp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintTop_toBottomOf="@id/titleThree"
                            app:layout_constraintStart_toStartOf="@id/titleThree"/>

                        <!-- 비디오 조회수 -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.8천회"
                            android:textColor="#9B9B9B"
                            android:textSize="11sp"
                            android:layout_marginStart="3dp"
                            app:layout_constraintTop_toTopOf="@id/hitsThree"
                            app:layout_constraintStart_toEndOf="@id/hitsThree"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- 1분 레시피 아래 구분선 -->
            <View
                android:id="@+id/divideTwo"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#D9D9D9"
                android:layout_marginTop="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/categoryScrollThree"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- 레시피 둘러보기 -->
            <TextView
                android:id="@+id/recipeSee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginStart="20dp"
                android:text="레시피 둘러보기"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/divideTwo"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- 조회수순 -->
            <TextView
                android:id="@+id/elementaryLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="조회수순"
                android:textColor="#2B2B2B"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/dowArrow"
                app:layout_constraintTop_toTopOf="@id/recipeSee"
                app:layout_constraintBottom_toBottomOf="@id/recipeSee"/>

            <!-- 드롭다운 -->
            <ImageButton
                android:id="@+id/dowArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_down"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/elementaryLevel" />

            <!-- 카테고리 버튼들을 가로 스크롤로 감싸기 -->
            <HorizontalScrollView
                android:id="@+id/categoryScrollFour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none"
                android:layout_marginTop="17dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toBottomOf="@id/recipeSee"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/categoryButtonContainerTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingEnd="20dp">

                    <!-- 전체 -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/allBtn"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:text="전체"
                        android:textSize="11sp"
                        android:textColor="#8A8F9C"
                        android:background="@drawable/btn_recipe_add"
                        android:stateListAnimator="@null"
                        android:layout_marginEnd="6dp" />

                    <!-- 한식 -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/krBtn"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:text="한식"
                        android:textSize="11sp"
                        android:textColor="#8A8F9C"
                        android:background="@drawable/btn_recipe_add"
                        android:stateListAnimator="@null"
                        android:layout_marginEnd="6dp" />

                    <!-- 양식 -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/wsBtn"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:text="양식"
                        android:textSize="11sp"
                        android:textColor="#8A8F9C"
                        android:background="@drawable/btn_recipe_add"
                        android:stateListAnimator="@null"
                        android:layout_marginEnd="6dp" />

                    <!-- 일식 -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/jpBtn"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:text="일식"
                        android:textSize="11sp"
                        android:textColor="#8A8F9C"
                        android:background="@drawable/btn_recipe_add"
                        android:stateListAnimator="@null"
                        android:layout_marginEnd="6dp" />

                    <!-- 중식 -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cnBtn"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:text="중식"
                        android:textSize="11sp"
                        android:textColor="#8A8F9C"
                        android:background="@drawable/btn_recipe_add"
                        android:stateListAnimator="@null"
                        android:layout_marginEnd="6dp" />

                    <!-- 채식 -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/vgBtn"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:text="채식"
                        android:textSize="11sp"
                        android:textColor="#8A8F9C"
                        android:background="@drawable/btn_recipe_add"
                        android:stateListAnimator="@null"
                        android:layout_marginEnd="6dp" />

                    <!-- 간식 -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/snBtn"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:text="간식"
                        android:textSize="11sp"
                        android:textColor="#8A8F9C"
                        android:background="@drawable/btn_recipe_add"
                        android:stateListAnimator="@null"
                        android:layout_marginEnd="6dp" />

                    <!-- 안주 -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/asBtn"
                        android:layout_width="50dp"
                        android:layout_height="25dp"
                        android:text="안주"
                        android:textSize="11sp"
                        android:textColor="#8A8F9C"
                        android:background="@drawable/btn_recipe_add"
                        android:stateListAnimator="@null"
                        android:layout_marginEnd="6dp" />

                    <!-- 밑반찬 -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/sdBtn"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:text="밑반찬"
                        android:textSize="11sp"
                        android:textColor="#8A8F9C"
                        android:background="@drawable/btn_recipe_add"
                        android:stateListAnimator="@null"
                        android:layout_marginEnd="6dp" />

                </LinearLayout>
            </HorizontalScrollView>

            <!-- 레시피 둘러보기 리스트 -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/searchResultRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="11dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/categoryScrollFour"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:listitem="@layout/item_recipe_card" />

            <Space
                android:layout_width="0dp"
                android:layout_height="150dp"
                app:layout_constraintTop_toBottomOf="@id/searchResultRecyclerView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- 작성하기 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/writeRecipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="490dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- 글쓰기 뒤에 하얀 배경 -->
                <ImageView
                    android:id="@+id/writeBackground"
                    android:layout_width="53dp"
                    android:layout_height="73dp"
                    android:elevation="8dp"
                    android:background="@drawable/ic_tap_circle"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- 작성하기 아이콘 -->
                <ImageButton
                    android:id="@+id/writeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:elevation="10dp"
                    android:src="@drawable/ic_write_recipe"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:layout_constraintTop_toTopOf="@id/writeBackground"
                    app:layout_constraintStart_toStartOf="@id/writeBackground"
                    app:layout_constraintEnd_toEndOf="@id/writeBackground"/>

                <!-- 작성 -->
                <TextView
                    android:id="@+id/write"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="작성"
                    android:textColor="#000000"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:elevation="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/writeBackground"
                    app:layout_constraintStart_toStartOf="@id/writeBackground"
                    app:layout_constraintEnd_toEndOf="@id/writeBackground"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 레시피, 숏폼 선택하기 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/writeRecipeAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone">

                <View
                    android:id="@+id/upStick"
                    android:layout_width="2dp"
                    android:layout_height="50dp"
                    android:background="#D9D9D9"
                    android:rotation="-35"
                    android:layout_marginTop="470dp"
                    android:layout_marginEnd="85dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/circleRecipe"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="레시피"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_circle"
                    app:layout_constraintTop_toTopOf="@id/upStick"
                    app:layout_constraintBottom_toBottomOf="@id/upStick"
                    app:layout_constraintEnd_toStartOf="@id/upStick"/>

                <View
                    android:id="@+id/downStick"
                    android:layout_width="2dp"
                    android:layout_height="50dp"
                    android:background="#D9D9D9"
                    android:rotation="+35"
                    android:layout_marginTop="530dp"
                    android:layout_marginEnd="85dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/circleShortVideo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="숏폼"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:background="@drawable/btn_circle"
                    app:layout_constraintTop_toTopOf="@id/downStick"
                    app:layout_constraintBottom_toBottomOf="@id/downStick"
                    app:layout_constraintEnd_toStartOf="@id/downStick"/>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- 탭바 전체 배경 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 탭바 배경 이미지 -->
        <ImageView
            android:id="@+id/mainTapBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bar_tap_bg"
            android:scaleType="fitXY" />

        <!-- 탭바 버튼 그룹 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="5">

            <!-- 동네주방 탭 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tapVillageKitchenIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_village_kitchen" />

                <TextView
                    android:id="@+id/tapVillageKitchenText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="동네주방"
                    android:textColor="#B9BEC1"
                    android:textSize="10sp"
                    android:layout_marginBottom="4dp" />
            </LinearLayout>

            <!-- 레시피 탭 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center|top">

                <ImageView
                    android:id="@+id/tapRecipeIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_recipe"
                    app:tint="#2B2B2B"
                    android:layout_marginTop="14dp"/>


                <TextView
                    android:id="@+id/tapRecipeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="레시피"
                    android:textColor="#2B2B2B"
                    android:textSize="10sp"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <!-- 홈 탭 -->
            <LinearLayout
                android:id="@+id/tapHome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tapHomeIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home"
                    android:layout_marginBottom="15dp"/>
            </LinearLayout>

            <!-- 커뮤니티 탭 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/tapCommunityIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_community" />

                <TextView
                    android:id="@+id/tapCommunityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="커뮤니티"
                    android:textColor="#B9BEC1"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- 냉장고 탭 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center|top">

                <ImageView
                    android:id="@+id/tapFridgeIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_refrigerator"
                    android:layout_marginTop="14dp"/>

                <TextView
                    android:id="@+id/tapFridgeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="냉장고"
                    android:textColor="#B9BEC1"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"/>

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>