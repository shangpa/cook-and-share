<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantryDetailActivity"
    android:background="@color/white">

    <!-- 상단 전체 영역 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Tmap 자리(기존 유지) -->
        <LinearLayout
            android:id="@+id/linearLayoutTmap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" />

        <!-- 헤더 영역 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/refrigeratorTap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <!-- 뒤로가기 -->
                <ImageButton
                    android:id="@+id/backArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_lelft_arrow"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 냉장고 관리 -->
                <TextView
                    android:id="@+id/refrigeratorAdmin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="냉장고 관리"
                    android:textColor="#000000"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/backArrow"
                    app:layout_constraintTop_toTopOf="@id/backArrow"
                    app:layout_constraintBottom_toBottomOf="@id/backArrow" />

                <!-- 분석 버튼 -->
                <ImageButton
                    android:id="@+id/analysisIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="15dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_receipt_camera"
                    app:layout_constraintBottom_toBottomOf="@id/backArrow"
                    app:layout_constraintEnd_toStartOf="@id/plusIcon"
                    app:layout_constraintTop_toTopOf="@id/backArrow" />

                <!-- 분석 -->
                <TextView
                    android:id="@+id/analysisText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="분석"
                    android:textColor="#2B2B2B"
                    android:textSize="14sp"
                    android:layout_marginTop="2.5dp"
                    app:layout_constraintStart_toStartOf="@id/analysisIcon"
                    app:layout_constraintEnd_toEndOf="@id/analysisIcon"
                    app:layout_constraintTop_toBottomOf="@id/analysisIcon" />

                <!-- 더하기 버튼 -->
                <ImageButton
                    android:id="@+id/plusIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="18dp"
                    android:layout_marginBottom="15dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_plus"
                    app:layout_constraintBottom_toBottomOf="@id/backArrow"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/backArrow" />

                <!-- 추가 -->
                <TextView
                    android:id="@+id/plusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가"
                    android:textColor="#2B2B2B"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@id/plusIcon"
                    app:layout_constraintEnd_toEndOf="@id/plusIcon"
                    app:layout_constraintTop_toBottomOf="@id/plusIcon" />

                <!-- 구분 바 -->
                <View
                    android:id="@+id/divideRectangleBarOne"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bar_rectangle"
                    app:layout_constraintTop_toBottomOf="@id/backArrow" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 타이틀/검색/탭/선택바 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/refrigeratoMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="90dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <!-- 메인 냉장고 제목 -->
                <TextView
                    android:id="@+id/mainRefrigerator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="메인 냉장고"
                    android:textColor="#2B2B2B"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- 검색 박스 배경 -->
                <View
                    android:id="@+id/searchBox"
                    android:layout_width="371dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/ic_fridge_search"
                    app:layout_constraintTop_toBottomOf="@id/mainRefrigerator"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- 검색 입력 -->
                <EditText
                    android:id="@+id/materialCook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="냉장고 속 재료로 요리해볼까요?"
                    android:textSize="16sp"
                    android:layout_marginStart="24dp"
                    android:backgroundTint="#9B9B9B"
                    android:background="@null"
                    android:inputType="text"
                    app:layout_constraintStart_toStartOf="@id/searchBox"
                    app:layout_constraintTop_toTopOf="@id/searchBox"
                    app:layout_constraintBottom_toBottomOf="@id/searchBox" />

                <!-- 검색 아이콘 -->
                <ImageButton
                    android:id="@+id/searchIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_search_fridge"
                    app:layout_constraintEnd_toEndOf="@id/searchBox"
                    app:layout_constraintTop_toTopOf="@id/searchBox"
                    app:layout_constraintBottom_toBottomOf="@id/searchBox" />

                <!-- 탭: 전체 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/total"
                    android:layout_width="53dp"
                    android:layout_height="27dp"
                    android:text="전체"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginTop="17dp"
                    android:background="@drawable/btn_fridge_ct_ck"
                    android:stateListAnimator="@null"
                    app:layout_constraintTop_toBottomOf="@id/searchBox"
                    app:layout_constraintStart_toStartOf="@id/mainRefrigerator" />

                <!-- 탭: 냉장 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/refrigeration"
                    android:layout_width="53dp"
                    android:layout_height="27dp"
                    android:text="냉장"
                    android:textSize="15sp"
                    android:textColor="#8A8F9C"
                    android:textStyle="bold"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/btn_fridge_ct"
                    android:stateListAnimator="@null"
                    app:layout_constraintTop_toTopOf="@id/total"
                    app:layout_constraintStart_toEndOf="@id/total" />

                <!-- 탭: 냉동 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/freeze"
                    android:layout_width="53dp"
                    android:layout_height="27dp"
                    android:text="냉동"
                    android:textSize="15sp"
                    android:textColor="#8A8F9C"
                    android:textStyle="bold"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/btn_fridge_ct"
                    android:stateListAnimator="@null"
                    app:layout_constraintTop_toTopOf="@id/total"
                    app:layout_constraintStart_toEndOf="@id/refrigeration" />

                <!-- 탭: 실온 -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/outside"
                    android:layout_width="53dp"
                    android:layout_height="27dp"
                    android:text="실온"
                    android:textSize="15sp"
                    android:textColor="#8A8F9C"
                    android:textStyle="bold"
                    android:layout_marginStart="7dp"
                    android:background="@drawable/btn_fridge_ct"
                    android:stateListAnimator="@null"
                    app:layout_constraintTop_toTopOf="@id/total"
                    app:layout_constraintStart_toEndOf="@id/freeze" />

                <!-- 전체 선택 / 수정 / 삭제 바 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/totalChoice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="15dp"
                    app:layout_constraintTop_toBottomOf="@id/total"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <!-- 체크 아이콘 + '전체 선택' -->
                    <ImageButton
                        android:id="@+id/check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_fridge_check"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/allCheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:text="전체 선택"
                        android:textColor="#454A52"
                        android:textSize="16sp"
                        app:layout_constraintStart_toEndOf="@id/check"
                        app:layout_constraintTop_toTopOf="@id/check"
                        app:layout_constraintBottom_toBottomOf="@id/check" />

                    <!-- 수정 -->
                    <TextView
                        android:id="@+id/modification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="9dp"
                        android:text="수정"
                        android:textColor="#454A52"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toStartOf="@id/divideRectangleBarTwo"
                        app:layout_constraintTop_toTopOf="@id/allCheck"
                        app:layout_constraintBottom_toBottomOf="@id/allCheck" />

                    <!-- 구분 바 -->
                    <View
                        android:id="@+id/divideRectangleBarTwo"
                        android:layout_width="2dp"
                        android:layout_height="13dp"
                        android:layout_marginEnd="9dp"
                        android:background="@drawable/bar_rectangle"
                        app:layout_constraintEnd_toStartOf="@id/delete"
                        app:layout_constraintTop_toTopOf="@id/modification"
                        app:layout_constraintBottom_toBottomOf="@id/modification" />

                    <!-- 삭제 -->
                    <TextView
                        android:id="@+id/delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="삭제"
                        android:textColor="#454A52"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/modification"
                        app:layout_constraintBottom_toBottomOf="@id/modification" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 전체 리스트 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/totalList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/refrigeratoMain"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="visible">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTotal"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingBottom="120dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/item_ingredient_list"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 냉장 리스트 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/coldStorageList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/refrigeratoMain"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFridge"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingBottom="120dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/item_ingredient_list"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 냉동 리스트 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/freezeList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/refrigeratoMain"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFreeze"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingBottom="120dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/item_ingredient_list"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 실외 리스트 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/outsideList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/refrigeratoMain"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOutside"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingBottom="120dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:listitem="@layout/item_ingredient_list"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 요리 둥둥 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cookDongDong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="90dp"
            android:elevation="16dp"
            android:clickable="false"
            android:focusable="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <!-- 요리 뒤에 하얀 배경 -->
                <ImageView
                    android:id="@+id/cookBackground"
                    android:layout_width="53dp"
                    android:layout_height="76dp"
                    android:elevation="8dp"
                    android:background="@drawable/ic_tap_circle"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <!-- 요리 뒤에 초록 배경 -->
                <ImageView
                    android:id="@+id/cookGreenBackground"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginTop="12dp"
                    android:elevation="10dp"
                    android:background="@drawable/btn_circle"
                    app:layout_constraintTop_toTopOf="@id/cookBackground"
                    app:layout_constraintStart_toStartOf="@id/cookBackground"
                    app:layout_constraintEnd_toEndOf="@id/cookBackground"/>

                <!-- 요리 이미지 -->
                <ImageView
                    android:id="@+id/cookImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/image_refrigerator_cook"
                    android:elevation="10dp"
                    app:layout_constraintStart_toStartOf="@id/cookGreenBackground"
                    app:layout_constraintEnd_toEndOf="@id/cookGreenBackground"
                    app:layout_constraintTop_toTopOf="@id/cookGreenBackground"
                    app:layout_constraintBottom_toBottomOf="@id/cookGreenBackground"/>

                <!-- 요리 -->
                <TextView
                    android:id="@+id/cook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="요리"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:elevation="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/cookBackground"
                    app:layout_constraintStart_toStartOf="@id/cookBackground"
                    app:layout_constraintEnd_toEndOf="@id/cookBackground"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 탭바 전체 배경 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- 탭바 배경 이미지 -->
            <ImageView
                android:id="@+id/mainTapBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/bar_tap_bg"
                android:scaleType="fitXY" />

            <!-- 탭바 버튼 그룹 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5">

                <!-- 동네주방 탭 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/tapVillageKitchenIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_village_kitchen" />

                    <TextView
                        android:id="@+id/tapVillageKitchenText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="동네주방"
                        android:textColor="#B9BEC1"
                        android:textSize="13sp"
                        android:layout_marginBottom="4dp" />
                </LinearLayout>

                <!-- 레시피 탭 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center|top">

                    <ImageView
                        android:id="@+id/tapRecipeIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_recipe"
                        android:layout_marginTop="14dp"/>


                    <TextView
                        android:id="@+id/tapRecipeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="레시피"
                        android:textColor="#B9BEC1"
                        android:textSize="13sp"
                        android:layout_marginTop="6dp"/>
                </LinearLayout>

                <!-- 홈 탭 -->
                <LinearLayout
                    android:id="@+id/tapHome"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/tapHomeIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_home"
                        android:layout_marginBottom="15dp"/>
                </LinearLayout>

                <!-- 커뮤니티 탭 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/tapCommunityIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_community" />

                    <TextView
                        android:id="@+id/tapCommunityText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="커뮤니티"
                        android:textColor="#B9BEC1"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- 냉장고 탭 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center|top">

                    <ImageView
                        android:id="@+id/tapFridgeIcon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_refrigerator"
                        app:tint="#2B2B2B"
                        android:layout_marginTop="14dp"/>

                    <TextView
                        android:id="@+id/tapFridgeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="냉장고"
                        android:textColor="#2B2B2B"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp"/>

                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>